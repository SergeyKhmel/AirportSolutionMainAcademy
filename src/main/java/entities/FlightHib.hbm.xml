<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.FlightHib" table="flight" schema="airport">
        <id name="id" column="id"/>
        <property name="flightNumber" column="flight_number"/>
        <property name="directionType" column="direction_type"/>
        <property name="leavingFrom" column="leaving_from"/>
        <property name="arrivalTo" column="arrival_to"/>
        <property name="leavingTime" column="leaving_time"/>
        <property name="arrivalTime" column="arrival_time"/>
    </class>
</hibernate-mapping>